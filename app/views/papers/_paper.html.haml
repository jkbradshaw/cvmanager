%div(class='item' id="paper-#{paper.id}")
  .head
    %span.title= "#{paper.title} (#{paper.journal_year})"
  .details
    %span.journal
      = "#{paper.journal.short_title}, #{paper.journal_volume}(#{paper.journal_issue}):#{paper.journal_pages}"
      = paper.pmed_date
    %br
    %span.authors= html_authors_for(paper,@cv)
    -if defined?(links) and links
      %div(class='links' id="links-#{paper.id}")
        =render :partial => 'cv_base/links', :locals=>{:one=>paper}


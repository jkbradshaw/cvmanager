- content_for :actions do
  =circle_plus_left_fg_button_to "add new award", new_cv_award_path(@cv)
    
- for award in @awards
  .prepend-1
    ="#{award.andand.name} "
    ="(#{award.andand.year})" unless award.andand.year.nil?
    .links.clearfix
      =link_to "edit", edit_cv_award_path(@cv,award)
      =link_to "remove", delete_cv_award_path(@cv,award)
    %hr
  

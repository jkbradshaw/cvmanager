!!!
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
%head
  %meta(http-equiv="Content-Type" content="text/html; charset=ut %>f-8")
  =stylesheet_link_tag('blueprint/screen', :media => "all")
  =stylesheet_link_tag('blueprint/print', :media => "print")
  =stylesheet_link_tag('jquery/flick/jquery-ui-1.7.2')
  /[if IE]
    =stylesheet_link_tag('blueprint/ie', :media=> "screen")
  =stylesheet_link_tag('application')
  =javascript_include_tag "jquery/jquery-1.3.2.min"
  =javascript_include_tag "jquery/jquery-ui-1.7.2.min"
  =yield(:head)
  %title=yield(:title) || "CV Manager"
  
%body
  .container
    #header.span-96.last
      %h2
    #banner.span-96.last
      .prepend-top.prepend-bottom
        %h1.prepend-12 Duke
    #sub-header.span-96.last
      #login.append-3.clearfix
        -if current_user
          Logged in as: 
          = current_user.username
          |
          = link_to 'edit profile', edit_user_path(current_user)
          | 
          = link_to 'logout', logout_path
        -else
          =link_to 'register', new_user_path
          |
          =link_to 'login', login_path
        #navigation.prepend-16
          =yield :navigation
    #cv-context.span-96.last
      .prepend-1
        =yield :cv_context
        %hr
    #left-sidebar.colborder.span-16.append-bottom
      =yield :left_sidebar
    #content.span-76.prepend-1.append-2.append-bottom.last
      #flash.span-76.last
        - flash.each do |name,msg|
          %div(class="#{name} prepend-top")=msg
      #main.span-76.last
        =yield :layout
    #footer
      %h1

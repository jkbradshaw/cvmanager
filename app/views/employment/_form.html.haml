- form_for @one, :url=>@one.new_record? ? cv_employment_path(@cv) : cv_employment_instance_path(@cv, @one) do |f|
  = f.error_messages 

  - f.fields_for @institution_fields do |i|
    %fieldset
      %legend Institution
      =i.label :name 
      =i.text_field :name, :size=>40
      %br
      =i.label :location
      =i.text_field :location, :size=>40
      %br
      =i.label :country
      =i.text_field :country, :size=>20

    %br
    =f.label :start_date 
    =f.date_select :start_date
    %br
    =f.label :end_date 
    =f.date_select :end_date
    %br
    =f.label :description
    = f.text_area :description, :size=>'34x4'

    %hr
    .prepend-10
      =fg_submit_button "Submit"
      =fg_cancel_button "Cancel"
- form_for @one, :url=> @one.new_record? ? cv_training_path(@cv) : cv_training_instance_path(@cv, @one), :builder=>CvFormBuilder do |f|
  =f.begin_form
  =f.text_field :level, :label=>'Training level', :class=>'required alpha'
  =f.text_field :specialty, :class=>'required alpha'
  =f.text_field :year, :size=>5, :class=>'required year', :label=>'Year completed'
  =f.text_area :description, :size=>'40x3'
  - f.fields_for @institution_fields do |i|
    %fieldset
      %legend Institution
      =i.text_field :name, :size=>40, :class=>'required alpha'
      =i.text_field :location, :size=>40, :class=>'required alpha'
      =i.text_field :country, :size=>20, :class=>'alpha'
  =f.end_form
